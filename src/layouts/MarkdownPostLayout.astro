---
import Header from "../components/Header.astro";
import "../styles/global.css";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
	<p><b>Written by: </b> {frontmatter.author}</p>
	<p><b>Published on: </b>{frontmatter.pubDate.toString().slice(0, 10)}</p>
	<p><em>{frontmatter.description}</em></p>
	<div class="tags">
		{frontmatter.tags.map((tag) => <span class="tag">{tag}</span>)}
	</div>
	<img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
	<slot />
</BaseLayout>

<style>
	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}

	.tag {
		background-color: #4c1d95;
		color: white;
		padding: 5px 10px;
		border-radius: 15px;
		display: inline-block;
		font-size: 14px;
	}
</style>
